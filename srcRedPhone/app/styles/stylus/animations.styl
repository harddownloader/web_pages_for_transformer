    background: PinkColor

  100% 
    color: colorOptBtns
    background: backgroundOptBtns

  

@keyframes act_btn
  0% 
    color: colorOptBtns
    background: backgroundOptBtns
  
  50%
    color: colorOptBtns
    background: PinkColor

  100% 
    color: colorOptBtns
    background: backgroundOptBtns
