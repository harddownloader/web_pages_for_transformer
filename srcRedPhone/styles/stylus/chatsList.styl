// header
.app-header.user-options {
  height: 66%;
  .user-options__options.user-control {
    height: 50%;
    display: flex;
    justify-content: space-between;
    // margin: 0 20px;
    align-items: center;
    .user-control__item {
      .user-control__img {}
      .user-control__img.more-btn {}
      .user-control__img.add-contact-btn {}
      .user-control__img.writing-btn {}
    }
  }
  .user-options__search {
    height: calc(50% - 10px);
    width: 100%;
    text-align: center;
    // margin: 5px auto;
    .search-input {
      background: url('../../chats/assets/img/icons_red_phone_transformer_chat_list/search@2x.png') no-repeat scroll 1em 50% #eff3f6;
      background-size: 1.8vh;
      padding: 0.1em 1em 0.1em 2.5em;
      font-size: 1.8vh;
      border: 0;
      width: calc(100% - 20px);
      height: 100%;
      // min-height: 30px;
      border-radius: 20px;
      font-family: 'TT Norms Pro Regular';
    }
  }
}

.chat-list-version {
  .display_container {
    .chatHeaderWrapper {
      .chatTopHeaderContainer {
        height: 33%;
      }
    }
  }
}

// content
.chats-list {
  margin: 5px 0px;
  .chat-item.need-item {
    cursor pointer
  }
  .chat-item.active {
    background-color: #fbf3f1  
  }
  .chat-item {
    display: flex;
    justify-content: space-between;
    padding: 0 10px;
    transition: all 0.3s;
    background-color: none;
    .chat__logo-and-heading {
      display: flex;
      align-items: center;
      .chat__avatar {}
      .chat__heading {
        width: 80%;
        margin: auto 0;
        margin-left: 5px;
        .chat__title {
          margin: 0px;
          text-transform: capitalize;
          // font-size: 1em;
            font-size: 1.8vh;
          font-weight: 600;
        }
        .chat__sub_title {
          margin: 0px;
          text-transform: capitalize;
          // font-size: 0.9em;
          font-size: 1.7vh;
          color: darken(backgroundOptBtns, 30);
        }
      }
    }
    .chat__date {
      .chat__date__time {
        // font-size: 1em;
        font-size: 1.8vh;
        color: darken(backgroundOptBtns, 30);
        text-transform: capitalize;
      }
    }
  }
}

// footer
.sections-app-wrapp {
    width: 100%;
    height: 4em;
    display: flex;
    align-items: flex-start;
    background-color: lightGrayColor
  .sections-app {
    height: 80%;
    width: 100%;
    display: flex;
    justify-content: space-evenly;
    margin-top: 1%;
    .sections-app__item {
      height: 100%;
      text-align: center;
      img.section_img {
        // height: 25px;
      }
      p.section_heading {
        margin: 0;
        // font-size: 0.8em;
        font-size: 1.8vh;
        color: darken(backgroundOptBtns, 30);
      }
    }
    .sections-app__item.active-section {
      img.section_img {}
      p.section_heading {
        color: lightBlue
      }
    }
  }
}