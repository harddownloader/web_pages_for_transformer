// анимация при вводе в поле ввода "текста пользователем"
.wrapper_phone
  position relative

.ChatAkcent
  z-index: -999
  position: absolute
  bottom: 0.3%
  left: 0.3%
  top: 0.3%
  right: 0.3%
  transition: box-shadow 1s
  // background: #fff
  
  .ChatAkcent__FooterOnly
    height 10%
    width 100%
    transition: box-shadow 1s

.ChatAkcent.three
  display: flex;
  align-items: flex-end;

.ChatAkcent.one.actAnimate
  box-shadow: 0px 31px 20px 10px darken(mainGrayColor, 15)

.ChatAkcent.two.actAnimate
  box-shadow: 0px 20px 20px 20px darken(mainGrayColor, 15)

.ChatAkcent.three.actAnimate
  .ChatAkcent__FooterOnly
    box-shadow: 0px 13px 20px 5px darken(mainGrayColor, 15)

// if animation is disabled
.ChatAkcent.none
  box-shadow: none;
