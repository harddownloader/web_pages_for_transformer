// fonts
@font-face{
  font-family: 'TT Norms Pro Regular'
  font-style: normal
  src: url('../../chats/assets/fonts/TTNormsPro/TTNormsPro-Regular.ttf')
}

@font-face{
  font-family: 'TT Norms Pro Medium'
  font-style: normal
  src: url('../../chats/assets/fonts/TTNormsPro/TTNormsPro-Medium.ttf')
}

*,:after,:before {
  box-sizing: border-box
}

body 
  font-family: 'TT Norms Pro Regular'
  background-color: #fff
  margin: 0

.display_container
  width: 100%
  margin: 0 auto
  height: 100%
  .chatHeaderWrapper
    .chatTopHeaderContainer
      height: 50%
      .chatTopHeaderBG
        height 0px
    .chatHeader
      .chatHeader__main
        width 100%
        height: 100%
        display: flex;
        align-items: flex-end;
        .headAndDate
          height: 80%;
          margin-bottom: 3px;
          display: flex
          align-items: center
          .chatHeader__back_btn
            // margin: 5px
          .chatHeader__logo
            // margin: 0px 5px 0px 15px
          .headAndDate__title_wrap
            line-height: 1em;
            .headAndDate__head
              //
            .headAndDate__sub_title
              color darken(backgroundOptBtns, 30)
              line-height: 0.9em;
              font-size: 0.9em;
          .headAndDate__head
            text-transform: capitalize
            font-size: 15px
            line-height: 13px // чтобы магнитило вниз
            color #000

.chatContentWrapper
  .date_dialogs
    text-align: center
    font-size: 11px
    margin-bottom: 15px
    .date_dialogs_item
      margin: 0px
      color: darken(mainGrayColor, 30)
  .options_wrapper
    margin-bottom: 20px
    .chat_options
      .optin_item
        width: 100%
        button.option_btn
          margin: 2px 0px
          background: #f5f5f5
          border: none
          color: blackColor
          transition: all 0.5s
          width: auto
          padding: 8px 15px
          border-radius: 8px
          font-family: 'TT Norms Pro Regular';
          font-weight: 400
          .opacity05.act_btn
            background: darken(backgroundOptBtns, 30)
          .opacity05
            opacity: 0.5
            background: darken(backgroundOptBtns, 30) !important

.wrapper_phone
  margin: 5% 0px; // отступы у анимации от краев экрана
  z-index: 10000;
  .phone_display_wrapper
    z-index: 10000;
    .phone_display
      border-radius: 15px;
      background-color: #fff

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) 
  /* Retina-specific stuff here */
  .wrapper_phone
    .phone_display_wrapper
      // background: url('../../chats/assets/img/bg/redPhone@3x.png')
      // background-size: 100% 100%;

.phone_display_wrapper
  //фиксируем положение родителя, для того чтобы расчеты отступов дочернего отталкивались от него, а не от всей веб-страницы
  overflow: hidden

// серый фон модального окна
#overlay
  visibility: hidden;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  text-align: center;
  z-index: 1000;
  background: rgba(72, 72, 72, 0.5);

// медиа запросы
@import sizesHeight
@import sizesWidth
