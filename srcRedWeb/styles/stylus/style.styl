.chatContent .chat-column > .item > .message-date 
  font-size: 11px
  color: darken(mainGrayColor, 30)
  font-weight: 400
  margin-bottom: 3px


body .chatContent .chat-column.company > .item > .message-date 
  text-align: end
  width: 100%


body .chatContent .chat-column.customer > .item > .message-date 
  text-align: start
  width: 100%


body .chatContent .chat-column.company 
  flex-direction: row-reverse
  margin-left: 10%


body .chatContent .chat-column.company > .item > .chat-icon 
  margin-right: 0
  margin-left: 13px
  color: #3699f6

