#master-container
  padding 0
  margin 0
  width 100%
  max-width 100%
  min-width 100%
  position relative
  z-index 0

#master-container
  overflow-x hidden
  position relative
  z-index 0
  &.noscroll
    padding 0 15px 0 0!important

.bg-shape
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-size cover
  z-index -1
  pointer-events none
  &:nth-child(1)
    background-color #F3F9FE
    clip-path polygon(0% 27%, 8% 20%, 37% 60%, 20% 100%, 0% 100%)
    -webkit-clip-path polygon(0% 27%, 8% 20%, 37% 60%, 20% 100%, 0% 100%)
  &:nth-child(2)
    background-color #EAF5FF
    clip-path polygon(0% 27%, 8% 20%, 0% 9%)
    -webkit-clip-path polygon(0% 27%, 8% 20%, 0% 9%)

#chat-box
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  transition opacity 0.3s linear
  z-index 1
  pointer-events auto
  opacity 1
  background-color: rgb(0,0,0);
  background-color: rgba(0,0,0,0.4);


#chat-box-content
  position relative
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center

#chat-box-bg
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none
  opacity 0.5

#chat-ui-bg
  transition: all 0.5s;
  width 1073px
  height 760px
  border-radius 20px;
  background: #fff
  background-position top center
  background-size cover
  background-repeat no-repeat
  z-index 1
  display flex
  flex-direction row
  align-items center
  justify-content center

#chat-ui-wrap
  margin-top: 3%;
  margin-bottom: 6%;
  margin-left: 2%;
  margin-right: 2%;
  position: relative;
  width: 96%;
  height: 86%;
  border: 3px solid secondGray;
  border-radius: 4px;

#chat-ui-top-padding-line
  width: 100%;
  height: 4%;
  display: block;
  background: mainGrayColor

#chat-ui
  position relative
  margin: 0px;
  width: 100%;
  height: 96%;
  display flex
  flex-direction row
  background-color #fff
  font-family 'Roboto', sans-serif
  font-size 15px
  line-height 20px
  font-weight 400
  color #000
  overflow hidden
  box-shadow: none;
  border-radius: 1px 1px 4px 4px;

#chat-ui-sidebar
  width 34%
  height 100%
  display flex
  flex-direction column
  justify-content flex-start
  border-right 1px solid #ddd;
  background-image: url('../../chats/assets/img/sidebarWithSelectedDialog.jpg');
  background-size: 100% 100%;

#chat-ui-main
  width 66%
  height 100%
  display flex
  flex-direction column
  justify-content flex-start
  border: 1px solid secondGray;
  border-right: none;
  border-bottom: none;

#chat-ui-header
  width 100%
  height 3.5em
  min-height 3.5em
  display flex
  background-color #fff
  padding 0 1em
  align-items: center;
  border-bottom: 1px solid secondGray;

#chat-ui-header-logo-and-text
  width 40%
  display: flex
  align-items: center;

#chat-ui-header-logo
  display: flex;
  align-items: center;
  #chat-ui-header-logo__item
    span
      background-color: #b70000;
      display: block;
      height: 30px;
      width: 30px;
      line-height: 30px;
      -moz-border-radius: 50%;
      border-radius: 50%;
      color: white;
      text-align: center;

#chat-ui-header-text
  margin-left: 10px

#chat-ui-header-icons
  width: 60%
  display: flex
  justify-content: flex-end
  align-items: center
  .chat-ui-header-icons__item
    margin: 0px 8px
    .header-icon-item
      width 20px
      height 20px
      &.bg-search
        width: 20px; height: 20px;
        background: url('../../chats/assets/img/icons/search.png');
        background-size: 100%;
      &.bg-phone
        width: 29px; height: 20px;
        background: url('../../chats/assets/img/icons/call.png');
        background-size: 100%;
      // &.bg-camera
      //   width: 20px; height: 14px;
      //   background: url('../../chats/assets/img/icons/transparent/css_sprites_20px.png') -10px -91px;
      // &.bg-logout
