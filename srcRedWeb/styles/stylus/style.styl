      &.bg-more
        width: 20px; height: 20px;
        background: url('../../chats/assets/img/icons/info.png')
        background-size: 100%;

#chat-ui-header-name-contact
  color: #000000
  font-size: 1em

#chat-ui-header-theme
  color: darken(mainGrayColor, 30)
  font-size: 0.8em;

#chat-ui-header-name-contact,
#chat-ui-header-theme
  line-height: 0.9rem
  font-family: Calibri

.chat-wrap
  position relative
  overflow-x hidden
  overflow-y scroll
  pointer-events auto
  -webkit-overflow-scrolling touch
  flex-grow 1
  width 100%
  background-color: easyBlue
  border-top 1px solid #ddd
  &::-webkit-scrollbar
    width 5px
  &::-webkit-scrollbar-track
    background transparent
  &::-webkit-scrollbar-thumb
    background-color rgba(0, 0, 0, 0.15)
    border-radius 2px
  img
    width 100%
    height auto
    object-fit contain
    object-position center

#chat-ui-input
  color #aaa
  width 100%
  height 3em
  min-height 3em
  display flex
  flex-direction row
  justify-content space-around
  align-items center
  align-content: center
  padding 0 1em
  background-color: easyBlue
  .input-element
    .input-element-item
