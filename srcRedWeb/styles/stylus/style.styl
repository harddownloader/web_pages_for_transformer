.chatContent .chat-column 
  display: flex
  margin-bottom: 8px
  padding: 0px
  margin-left: -15px
  margin-right: -5px

.chatContent .chat-column > .item > .chat-icon 
  width: 25px
  height: 25px
  line-height: 25px
  border-radius: 50%
  text-align: center
  font-size: 12px
  color: #fff
  font-weight: 600
  margin-right: 10px
  margin-top: 5px

.chatContent .chat-column > .item > .chat-message 
  color: #000
  font-size: 14px
  padding: 10px 15px
  border-radius: 10px
  line-height: 20px
  span.blueText
    color: #2196F3;
  span.boldText
    font-weight: bold

body .chatContent .company.chat-column > .item > .chat-message 
  border-radius: 20px 3px 20px 20px
  background-color: #b9dff7


.chatContent .customer.chat-column > .item > .chat-message
  border-radius: 3px 20px 20px 20px
  // background-color: lighten(PinkColor, 70%)
